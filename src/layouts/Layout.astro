---
import Preguntas from "@/sections/Preguntas.astro";
import "../../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/favicon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Netflix Landing</title>
  </head>
  <body>
    <slot />
    <div aria-hidden id="gradiente">â€¦</div>
    <img src="/bg-netflix.jpg" alt="Background de Netflix" id="bg-netflix" />
    <Preguntas />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      "Roboto",
      "Montserrat",
      sans-serif,
      system-ui,
      -apple-system;
    color: #fff;
    /* opacity: 90%; */
  }

  #bg-netflix {
    width: 100%;
    height: 100%;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    object-fit: cover;
    object-position: center;
    inset: 0;
    min-width: 100%;
    min-height: 100%;
    z-index: -1000;
  }

  #gradiente {
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
      14deg,
      rgba(0, 0, 0, 0.85) 10%,
      rgba(0, 0, 0, 0.8465) 17.25%,
      rgba(0, 0, 0, 0.8361) 24.5%,
      rgba(0, 0, 0, 0.8187) 31.75%,
      rgba(0, 0, 0, 0.7944) 39%,
      rgba(0, 0, 0, 0.7632) 46.25%,
      rgba(0, 0, 0, 0.725) 53.5%,
      rgba(0, 0, 0, 0.6868) 60.75%,
      rgba(0, 0, 0, 0.6556) 68%,
      rgba(0, 0, 0, 0.6312) 75.25%,
      rgba(0, 0, 0, 0.6139) 82.5%,
      rgba(0, 0, 0, 0.6035) 89.75%,
      rgba(0, 0, 0) 97%
    );
    position: absolute;
    inset: 0;
    z-index: -100;
  }

  @media (min-width: 960px) {
    #bg-netflix {
      background-position: center;
      width: 100%;
      height: 120%;
    }

    #gradiente {
      height: 120%;
    }
  }
</style>
