---
import Preguntas from "@/sections/Preguntas.astro";
import "../../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/favicon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Netflix Landing</title>
  </head>
  <body>
    <main id="container-main">
      <div class="fixed inset-0 -z-10 bg-black"></div>
      <slot />
      <div aria-hidden id="gradiente">â€¦</div>
      <img src="/bg-netflix.jpg" alt="Background de Netflix" id="bg-netflix" />
    </main>
    <!-- <Preguntas /> -->
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family:
      "Netflix Sans" "Roboto",
      "Montserrat",
      sans-serif,
      system-ui,
      -apple-system;
    color: #fff;
    z-index: -10;
    height: 300dvh;
    /* opacity: 90%; */
  }

  * {
    font-family: "Netflix Sans", sans-serif;
  }

  #container-main {
    z-index: 100;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
  }

  #bg-netflix {
    width: 100%;
    height: 70%;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    object-fit: cover;
    object-position: center;
    inset: 0;
    /* min-width: 100%; */
    /* min-height: 100%; */
    z-index: -10;
  }

  #gradiente {
    width: 100%;
    height: 70%;
    background-image: linear-gradient(
      14deg,
      rgba(0, 0, 0, 0.95) 10%,
      rgba(0, 0, 0, 0.9465) 17.25%,
      rgba(0, 0, 0, 0.9361) 24.5%,
      rgba(0, 0, 0, 0.8187) 31.75%,
      rgba(0, 0, 0, 0.8944) 39%,
      rgba(0, 0, 0, 0.7632) 46.25%,
      rgba(0, 0, 0, 0.825) 53.5%,
      rgba(0, 0, 0, 0.7868) 60.75%,
      rgba(0, 0, 0, 0.7556) 68%,
      rgba(0, 0, 0, 0.7312) 75.25%,
      rgba(0, 0, 0, 0.7139) 82.5%,
      rgba(0, 0, 0, 0.7035) 89.75%,
      rgba(0, 0, 0, 0.9) 97%
    );
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  @media (min-width: 960px) {
    #bg-netflix {
      background-position: center;
      width: 100%;
      height: 100%;
    }

    #gradiente {
      height: 100%;
      background-image: linear-gradient(
        14deg,
        rgba(0, 0, 0, 0.95) 10%,
        rgba(0, 0, 0, 0.9865) 17.25%,
        rgba(0, 0, 0, 0.9861) 24.5%,
        rgba(0, 0, 0, 0.9187) 31.75%,
        rgba(0, 0, 0, 0.7944) 39%,
        rgba(0, 0, 0, 0.7632) 46.25%,
        rgba(0, 0, 0, 0.825) 53.5%,
        rgba(0, 0, 0, 0.7868) 60.75%,
        rgba(0, 0, 0, 0.8556) 68%,
        rgba(0, 0, 0, 0.8312) 75.25%,
        rgba(0, 0, 0, 0.6139) 82.5%,
        rgba(0, 0, 0, 0.7035) 89.75%,
        rgba(0, 0, 0, 0.9) 97%
      );
    }
  }
</style>
