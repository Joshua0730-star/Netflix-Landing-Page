<div class="relative w-full">
  <input
    id="input-email"
    type="email"
    autocomplete="email"
    required
    minlength="5"
    maxlength="50"
    class="h-10 lg:h-12 px-6 rounded ring ring-arrows w-full text-inherit text-xs md:text-md font-inherit"
  />
  <label for="input-email" id="label-email" class="text-zinc-300">Email</label>

  <style>
    #label-email {
      position: absolute;
      top: 10px;
      left: 12px;
      transition: all 0.3s ease;
      pointer-events: none;
      font-size: 12px;
    }

    #input-email:focus ~ #label-email,
    #input-email:valid ~ #label-email,
    #input-email:valid ~ #label-email {
      top: 3.2px;
      left: 22px;
      font-size: 10px;
      /* color: #333; */
    }

    @media (min-width: 478px) {
      #label-email {
        font-size: 14px;
      }
      #input-email:focus ~ #label-email,
      #input-email:valid ~ #label-email {
        top: 2.5px;
        left: 26px;
        font-size: 10px;
        /* color: #333; */
      }
    }

    @media (max-width: 1480px) {
      #input-email:focus ~ #label-email,
      #input-email:valid ~ #label-email {
        top: 1.5px;
        left: 26px;
        font-size: 10px;
        /* color: #333; */
      }
    }
  </style>
</div>
