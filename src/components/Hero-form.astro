---
import ArrowRight from "../../public/arrow-right-small.svg";
import ButtonRed from "./Button-red.astro";
import InputEmail from "./InputEmail.astro";

interface Props {
  title?: string;
  classesHead?: string;
  classesChild?: string;
  subHeading?: string;
  description: string;
}

const { title, description, subHeading, classesHead, classesChild } =
  Astro.props;
---

<form
  class=`max-w-xl lg:max-w-screen-md lg:p-1.5 p-3 flex flex-col items-center text-center mb-24 ${classesHead}`
>
  <h1
    class="text-3xl sm:text-4xl lg:text-5xl font-bold text-balance animate-fade-in-down max-w-md lg:max-w-full"
  >
    {title}
  </h1>
  <p
    class="mt-1 text-wrap animate-fade-in-down text-sm md:text-base lg:font-medium"
  >
    {subHeading}
  </p>
  <span class="mt-2 animate-fade-in-down md:text-base max-w-md text-sm"
    >{description}</span
  >
  <div
    class=`flex p-2 mt-1 max-w-lg w-full gap-2 flex-col items-center md:flex-row md:px-1 justify-center ${classesChild} im`
  >
    <InputEmail />
    <ButtonRed
      class="py-2 px-5 mt-3 md:mt-0 md:text-lg lg:py-3 text-lg font-semibold"
      text="Comenzar"
    >
      <ArrowRight class="ml-2 size-3.5 lg:size-4.5" />
    </ButtonRed>
  </div>
</form>
