---
import ButtonRed from "../components/Button-red.astro";
import Logo from "../../public/netflix-logo-small.svg";
import ButtonLang from "../components/Button-lang.astro";
import HeroForm from "@/components/Hero-form.astro";
---

<header
  class="w-full flex flex-col justify-between items-center px-6 md:px-4 lg:px-12 max-w-screen-xl mx-auto lg:h-screen xl:h-screen"
>
  <section class="w-full flex justify-between">
    <div class="flex items-start">
      <Logo class="size-20 md:size-24 lg:size-32 transition duration-150" />
    </div>
    <div class="flex justify-center items-center gap-2.5">
      <ButtonLang />
      <ButtonRed text="Iniciar sesión" />
    </div>
  </section>
  <section class="mt-10 lg:justify-self-center">
    <HeroForm
      title={"Películas y series ilimitadas y mucho más"}
      subHeading={"A partir de $18,900. Cancela cuando quieras"}
      description={"¿Quieres ver Netflix ya? Ingresa tu email para crear una cuenta o reiniciar tu membresía de Netflix"}
    />
  </section>
</header>
